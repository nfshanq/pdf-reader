{
  "appId": "com.pdfprocessor.app",
  "productName": "PDF图像处理器",
  "copyright": "Copyright © 2024",
  "directories": {
    "buildResources": "build",
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    {
      "from": "dist",
      "to": ".",
      "filter": ["**/*"]
    }
  ],
  "extraResources": [
    {
      "from": "examples",
      "to": "examples",
      "filter": ["*.pdf"]
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.icns",
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "gatekeeperAssess": false,
    "hardenedRuntime": true,
    "notarize": false
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico",
    "publisherName": "PDF处理器"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icons",
    "category": "Office"
  },

  "publish": null,
  "buildVersion": "1.0.0"
}

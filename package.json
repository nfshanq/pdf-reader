{
  "name": "pdf-reader",
  "version": "1.0.0",
  "description": "PDF image processing tool with rendering, image enhancement, and export capabilities",
  "main": "dist/main/main.js",
  "type": "module",
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "server": "nodemon --exec tsx src/server/api.ts",
    "server:prod": "node dist/server/api.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Linting not configured yet'",
    "test": "echo 'Tests not configured yet'",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build:electron": "npm run build && npm run build:main && npm run build:preload",
    "start:electron": "npm run build:electron && NODE_ENV=production electron .",
    "dist": "npm run build:electron && electron-builder",
    "dist:mac": "npm run build:electron && electron-builder --mac",
    "dist:win": "npm run build:electron && electron-builder --win",
    "dist:linux": "npm run build:electron && electron-builder --linux"
  },
  "keywords": [
    "pdf",
    "image-processing",
    "sharp",
    "mupdf",
    "document-processing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.19.2",
    "multer": "2.0.2",
    "mupdf": "1.26.4",
    "pdf-lib": "1.17.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "sharp": "0.34.3",
    "vite": "7.1.4"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/electron": "^1.4.38",
    "@types/express": "4.17.21",
    "@types/multer": "2.0.0",
    "@types/node": "20.19.11",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "nodemon": "3.1.10",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "wait-on": "^8.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
